<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- zxing style -->
    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
    <item name="android:layout_width">0dip</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
  </style>
  
    <!-- dialog theme -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    
    <!-- Header style -->
    <style name="header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- detail style -->
    <style name="detail">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="order">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="EditStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/login_edittext_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <!-- line style -->
    <style name="line">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_columnSpan">4</item>
    </style>
    
    <style name="HomeTabs">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/tab_btn_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="tabone">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">2dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/item_bg_long</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="tabfour">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">2dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/white</item>
    </style>
    

</resources>
