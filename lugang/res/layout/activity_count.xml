<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header"/>
    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"/>
    <include layout="@layout/logo"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal">
        
        <TextView
            style="@style/detail"
            android:text="类型" />

        <TextView android:text=""
            android:id="@+id/name"
            android:layout_columnSpan="3"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_dark"/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="名称"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/getter"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="数量"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/gphone"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_orange_light"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="数量单位"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/end"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView
            style="@style/detail"
            android:text="总重量" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/gaddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView
            style="@style/detail"
            android:text="重量单位" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/sender"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView
            style="@style/detail"
            android:text="总体积" />

        <TextView android:layout_columnSpan="2"
            android:id="@+id/sphone"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_orange_light"
            android:text=""/>
        <Button android:layout_height="30dp"
            android:id="@+id/sdial"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:background="@drawable/login_button_bg"
            android:textColor="@android:color/white"
            android:text="拨 打"/>
        
        <View style="@style/line"/>
        
        <TextView
            style="@style/detail"
            android:text="体积单位" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/start"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
        <TextView
            style="@style/detail"
            android:text="运费" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="提货费" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="送货费" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="保险费" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="总运费" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="投保价值" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:text="代收货款" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        <TextView
            style="@style/detail"
            android:editable="true"
            android:text="货款" />

        <TextView android:layout_columnSpan="3"
            android:id="@+id/saddress"
            android:layout_width="200dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
        <View style="@style/line"/>
        
    </GridLayout>
    </ScrollView>

</LinearLayout>
