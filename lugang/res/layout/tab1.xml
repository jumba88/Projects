<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/tab_header"/>
    
    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"/>
    <include layout="@layout/logo"/>
    
    <Button style="@style/tabone"
        android:id="@+id/express"
        android:text="@string/express"/>
    
    <Button style="@style/tabone"
        android:id="@+id/company"
        android:text="@string/company"/>
    
    <Button style="@style/tabone"
        android:id="@+id/truck"
        android:text="@string/carinfo"/>
    
    <Button style="@style/tabone"
        android:id="@+id/assign"
        android:text="@string/lastet"/>
    
    <Button style="@style/tabone"
        android:id="@+id/billsearch"
        android:text="@string/billsearch"/>
    
    <Button style="@style/tabone"
        android:id="@+id/notice"
        android:text="@string/notice"/>

</LinearLayout>
