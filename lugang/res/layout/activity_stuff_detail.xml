<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header"/>
    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5"/>
    <include layout="@layout/logo"/>
    
    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal">
        
        <TextView style="@style/detail"
            android:text="物品名称"/>
        <TextView android:text="电冰箱"
            android:id="@+id/name"
            android:textSize="15sp"
            android:layout_columnSpan="3"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_dark"/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="出发地"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/start"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="广西-柳州市-市辖区"/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="目的地"/>
        <TextView android:text="广西-南宁市"
            android:id="@+id/end"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_columnSpan="3"/>
        
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="运抵期限"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/arriveTime"
            android:layout_marginLeft="10dp"
            android:text="2014-01-09"/>
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="数量"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/totalCount"
            android:layout_marginLeft="10dp"
            android:text="10"/>
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="总重量"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/totalWeight"
            android:layout_marginLeft="10dp"
            android:text="2t"/>
        <View style="@style/line"/>
        
        
        <TextView style="@style/detail"
            android:text="总体积"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/cubage"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/m3"
            android:text="0"/>
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="联系人"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/contact"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_light"
            android:text="黄老大"/>
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="联系电话"/>
        <TextView android:layout_columnSpan="2"
            android:id="@+id/phone"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_light"
            android:text="18648807322"/>
        <Button android:layout_height="30dp"
            android:id="@+id/dial"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/login_button_bg"
            android:textColor="@android:color/white"
            android:text="拨 打"/>
        <View style="@style/line"/>
        
        <TextView style="@style/detail"
            android:text="说明"/>
        <TextView android:layout_columnSpan="3"
            android:id="@+id/detail"
            android:layout_marginLeft="10dp"
            android:text=""/>
        
    </GridLayout>

</LinearLayout>
