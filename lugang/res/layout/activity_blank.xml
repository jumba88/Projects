<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33B5E5" />

    <include layout="@layout/logo" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_normal"
                android:columnCount="4"
                android:orientation="horizontal" >

                <TextView
                    android:layout_columnSpan="4"
                    android:layout_marginLeft="10dp"
                    android:text="基本信息"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />

                <TextView
                    style="@style/detail"
                    android:text="是否投保" />

                <Switch
                    android:id="@+id/istb"
                    android:layout_width="100dp"
                    android:layout_columnSpan="3"
                    android:layout_marginLeft="10dp"
                    android:textOff="@string/no"
                    android:textOn="@string/yes" />

                <View style="@style/line" />

                <TextView
                    style="@style/detail"
                    android:text="是否提醒" />

                <Switch
                    android:id="@+id/istx"
                    android:layout_width="100dp"
                    android:layout_columnSpan="3"
                    android:layout_marginLeft="10dp"
                    android:textOff="@string/no"
                    android:textOn="@string/yes" />

                <View style="@style/line" />

                <TextView
                    style="@style/detail"
                    android:text="送货方式" />

                <RadioGroup
                    android:layout_columnSpan="3"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top"
                    android:gravity="left"
                    android:orientation="horizontal" >
                    <RadioButton android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sh"
                        android:gravity="left"
                        android:checked="true"
                        android:text="送货"/>
                    
                    <RadioButton android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/zt"
                        android:layout_marginLeft="20dp"
                        android:gravity="left"
                        android:text="自提"/>
                 </RadioGroup>

                <View style="@style/line" />

                <View style="@style/line" />

                <TextView
                    style="@style/detail"
                    android:text="送抵期限" />

                <Button
                    android:id="@+id/ydqx"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:text="" />

                <View style="@style/line" />

 
                <TextView
                    android:layout_columnSpan="4"
                    android:layout_marginLeft="10dp"
                    android:text="收货人"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />
                
                 <TextView
                    style="@style/detail"
                    android:text="单位/姓名" />

                <EditText
                    android:id="@+id/name_sh"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:text="" />

                <View style="@style/line" />
                <TextView
                    style="@style/detail"
                    android:text="电话" />

                <EditText
                    android:id="@+id/phone_sh"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="" />

                <View style="@style/line" />

                <TextView
                    style="@style/detail"
                    android:text="地址" />

                <Button
                    android:id="@+id/to"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:textColor="@android:color/darker_gray"
                    android:text="请选择区域" />
                <TextView
                    style="@style/detail"
                    android:text="" />

                <EditText
                    android:id="@+id/address_sh"
                    style="@style/EditStyle"
                    android:layout_width="200dp"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:text="" />

                <View style="@style/line" />
                
                <TextView
                    style="@style/detail"
                    android:gravity="top|right"
                    android:layout_gravity="top"
                    android:text="企业代码\n身份证" />

                <EditText
                    android:id="@+id/code_sh"
                    style="@style/EditStyle"
                    android:layout_width="200dp"
                    android:layout_columnSpan="3"
                    android:ems="18"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="" />

                <View style="@style/line" />

                <TextView
                    android:layout_columnSpan="4"
                    android:layout_marginLeft="10dp"
                    android:text="托运人"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />
                
                 <TextView
                    style="@style/detail"
                    android:text="单位/姓名" />

                <EditText
                    android:id="@+id/name_ty"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:text="" />

                <View style="@style/line" />
                <TextView
                    style="@style/detail"
                    android:text="电话" />

                <EditText
                    android:id="@+id/phone_ty"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="" />

                <View style="@style/line" />

                <TextView
                    style="@style/detail"
                    android:text="地址" />

                <Button
                    android:id="@+id/from"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:textColor="@android:color/darker_gray"
                    android:text="请选择区域" />
                <TextView
                    style="@style/detail"
                    android:text="" />

                <EditText
                    android:id="@+id/address_ty"
                    style="@style/EditStyle"
                    android:layout_width="200dp"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:text="" />

                <View style="@style/line" />
                
                <TextView
                    style="@style/detail"
                    android:gravity="top|right"
                    android:layout_gravity="top"
                    android:text="企业代码\n身份证" />

                <EditText
                    android:id="@+id/code_ty"
                    style="@style/EditStyle"
                    android:layout_width="200dp"
                    android:layout_columnSpan="3"
                    android:ems="18"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="" />
                
                <View style="@style/line" />

                <TextView
                    android:layout_columnSpan="4"
                    android:layout_marginLeft="10dp"
                    android:text="开单人"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />
                
                 <TextView
                    style="@style/detail"
                    android:text="开单人" />

                <EditText
                    android:id="@+id/name_kd"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:enabled="false"
                    android:text="" />

                <View style="@style/line" />
                <TextView
                    style="@style/detail"
                    android:text="电话" />

                <EditText
                    android:id="@+id/phone_kd"
                    style="@style/EditStyle"
                    android:layout_columnSpan="3"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:text="" />
                
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="货物列表"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="15sp" />

            <Button android:id="@+id/add"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="添加货物"
                android:textColor="@android:color/holo_orange_dark"/>

            <ListView
                android:id="@+id/stuffList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1px"
                android:scrollingCache="false" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>